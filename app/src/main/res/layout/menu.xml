<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tou_background"
    android:orientation="horizontal"
    tools:context=".MenuActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chasseauxtresor"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accueil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trait"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView4" />

    <Button android:id="@+id/score_button"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/scores"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/scan_button"
        android:layout_alignStart="@+id/scan_button" />

    <Button android:id="@+id/scan_button"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/scann"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/score_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/boutique_button"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/boutique"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/scan_button"
        android:layout_alignLeft="@+id/scan_button"
        android:layout_alignStart="@+id/scan_button" />

    <Button android:id="@+id/regles_button"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/regle"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/boutique_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/mapButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/carte"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/regles_button"
        android:layout_alignStart="@+id/regles_button"
        android:layout_marginBottom="39dp" />

    <Button android:id="@+id/accueil_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/accueil"
        android:layout_alignTop="@+id/mapButton"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />



</RelativeLayout>